%p#notice= notice
%h1 Listado de Marcas
%table
  %thead
    %tr
      %th Name
      %th{:colspan => "3"}
  %tbody
    - @makes.each do |make|
      %tr
        %td= make.name
        %td= link_to 'Show', make
        %td= link_to 'Edit', edit_make_path(make)
        %td= link_to 'Destroy', make, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Make', new_make_path
